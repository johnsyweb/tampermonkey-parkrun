{
  "name": "tampermonkey-parkrun",
  "version": "1.0.0",
  "description": "A script or scripts for messing with parkrun results pages",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "create-bookmarklets": "node scripts/create-bookmarklets.js",
    "update-version": "node scripts/update-version.js",
    "screenshots": "ts-node scripts/generate-screenshots.ts",
    "update-scripts-data": "node scripts/extract-script-info.js > docs/_data/scripts.json && node scripts/generate-scripts-yml.js",
    "docs:build": "cd docs && bundle exec jekyll build",
    "docs:install": "cd docs && bundle install",
    "docs:serve": "cd docs && bundle exec jekyll serve",
    "prepare": "husky"
  },
  "keywords": [
    "parkrun",
    "tampermonkey",
    "bookmarklet",
    "user script"
  ],
  "author": "Pete Johns (@johnsyweb)",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.1.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-fixed-jsdom": "^0.0.11",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.31.0",
    "ts-node": "^10.9.2",
    "uglify-js": "^3.19.3"
  },
  "jest": {
    "testEnvironment": "jest-fixed-jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(.pnpm|parse5|whatwg-url|tr46|webidl-conversions|jsdom)/)"
    ],
    "transform": {
      "^.+\\.(js|mjs)$": "babel-jest"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "endOfLine": "lf"
  }
}
