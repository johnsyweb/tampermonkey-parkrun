{
  "name": "tampermonkey-parkrun",
  "version": "1.0.0",
  "description": "A script or scripts for messing with parkrun results pages",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build:data": "pnpm run docs:assets",
    "update-version": "node scripts/update-version.js",
    "screenshots": "ts-node scripts/generate-screenshots.ts",
    "update-scripts-data": "node scripts/extract-script-info.js",
    "docs:assets": "pnpm run build:scripts && pnpm run screenshots && node scripts/generate-thumbnails.js && pnpm run update-scripts-data",
    "docs:build": "pnpm run docs:assets && cd docs && bundle exec jekyll build && node ../scripts/generate-sitemap.js",
    "docs:check": "cd docs && bundle exec htmlproofer ./_site --disable-external --root-dir \"$(pwd)/_site\" --swap-urls 'tampermonkey-parkrun/:' || echo \"htmlproofer reported issues (non-fatal)\"",
    "docs:install": "cd docs && bundle install",
    "docs:serve": "pnpm run docs:assets && cd docs && bundle exec jekyll serve",
    "build:scripts": "node scripts/build-scripts.js",
    "check:userscripts": "node scripts/check-userscript-metadata.js *.user.js",
    "ci": "pnpm run build:scripts && pnpm run check:userscripts && pnpm test && pnpm lint && pnpm docs:build && pnpm docs:check",
    "prepare": "husky"
  },
  "keywords": [
    "parkrun",
    "tampermonkey",
    "bookmarklet",
    "user script"
  ],
  "author": "Pete Johns (@johnsyweb)",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob": "^13.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-fixed-jsdom": "^0.0.11",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "puppeteer": "^24.37.2",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.2",
    "uglify-js": "^3.19.3"
  },
  "jest": {
    "testEnvironment": "jest-fixed-jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(.pnpm|parse5|whatwg-url|tr46|webidl-conversions|jsdom|@exodus|html-encoding-sniffer)/)"
    ],
    "transform": {
      "^.+\\.(js|mjs)$": "babel-jest"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "endOfLine": "lf"
  }
}
